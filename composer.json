{
    "name": "intera-typo3-extension/cacheopt",
    "description": "Optimizes automatic cache clearing.",
    "type": "typo3-cms-extension",
    "authors": [
        {
            "name": "Alexander Stehlik",
            "email": "astehlik.deleteme@intera.de",
            "role": "Developer",
            "homepage": "http://www.intera.de"
        }
    ],
    "license": "GPL-3.0+",
    "require": {
        "php": ">=5.5.0",
        "typo3/cms-core": "^6.2 || ^7.6 || ^8.0"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "1.1.x-dev",
        "phpunit/phpunit": "~4.8.0",
        "typo3-ter/gridelements": "*"
    },
    "autoload": {
        "psr-4": {
            "Tx\\Cacheopt\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tx\\Cacheopt\\Tests\\": "Tests/",
            "Tx\\CacheoptTest\\": "Tests/Functional/Fixtures/Extensions/cacheopt_test/Classes/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "replace": {
        "cacheopt": "self.version",
        "typo3-ter/cacheopt": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org"
        }
    ]
}
