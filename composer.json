{
    "name": "intera-typo3-extension/cacheopt",
    "description": "Optimizes automatic cache clearing.",
    "type": "typo3-cms-extension",
    "authors": [
        {
            "name": "Alexander Stehlik",
            "email": "astehlik.deleteme@intera.de",
            "role": "Developer",
            "homepage": "http://www.intera.de"
        }
    ],
    "license": "GPL-3.0+",
    "require": {
        "php": ">=5.6",
        "typo3/cms-core": "^6.2 || ^7.6 || ^8.7",
        "typo3/cms": "^6.2"
    },
    "require-dev": {
        "typo3-ter/gridelements": "*",
        "squizlabs/php_codesniffer": "^3.1",
        "de-swebhosting/php-codestyle": "dev-master",
        "nimut/testing-framework": "^2.0 || ^4.1"
    },
    "autoload": {
        "psr-4": {
            "Tx\\Cacheopt\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tx\\Cacheopt\\Tests\\": "Tests/",
            "Tx\\CacheoptTest\\": "Tests/Functional/Fixtures/Extensions/cacheopt_test/Classes/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "replace": {
        "typo3-ter/cacheopt": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cacheopt ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cacheopt"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".Build",
            "web-dir": ".Build/Web",
            "extension-key": "cacheopt"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org"
        }
    ]
}
